<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#1A1A2E"
    tools:context=".MainActivity">

    <!-- Header avec connexion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:background="#2D2D44"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tvStbInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¡ Non connectÃ©"
            android:textColor="#AAAAAA"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="Connecter"
            android:textSize="12sp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:text="â¬‡ï¸"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Filtre par Satellite/Favoris -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <Spinner
            android:id="@+id/spinnerFilter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#3D3D5C"
            android:popupBackground="#2D2D44"
            android:padding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnZappingMode"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:text="ðŸ“º"
            android:textSize="18sp"
            android:padding="0dp"
            app:strokeColor="#4CAF50"
            app:strokeWidth="2dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- Barre de recherche -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ” Rechercher..."
        android:inputType="text"
        android:minHeight="50dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/white"
        android:textColorHint="#AAAAAA"
        android:background="@drawable/search_box_background"
        android:padding="12dp"
        android:textSize="16sp"/>

    <!-- Barre de progression -->
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chargement..."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Liste des chaÃ®nes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Ligne de statut -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="0 chaÃ®ne(s)"
        android:textColor="#AAAAAA"
        android:textSize="10sp"
        android:gravity="center" />

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnManageFavs"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="â˜… Favoris"
            android:textSize="12sp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnSaveToStb"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="ðŸ’¾ Sauver"
            android:textSize="12sp"
            android:layout_marginStart="6dp"
            android:backgroundTint="#2196F3" />
    </LinearLayout>

</LinearLayout>
